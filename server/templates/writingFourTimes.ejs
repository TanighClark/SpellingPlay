<%- include('header.ejs') %>

    <style>
        body {
            font-family: Helvetica, sans-serif;
            margin: 40px;
            font-size: 12pt;
        }

        h1 {
            font-size: 20pt;
            margin-bottom: 0;
        }

        p {
            margin-top: 0;
            margin-bottom: 30px;
        }

        table.write-four-table {
            width: 100%;
            border-collapse: collapse;
            table-layout: fixed;
        }

        table.write-four-table th,
        table.write-four-table td {
            border: 1px solid #000;
            padding: 12px;
            text-align: center;
        }

        .word-cell {
            font-weight: bold;
            word-break: break-word;
        }

        .blank-line {
            border-bottom: 2px solid #000;
            height: 2em;
            min-width: 100%;
            display: block;
        }
    </style>

    <table class="write-four-table">
        <thead>
            <tr>
                <th>Word</th>
                <th>1st Try</th>
                <th>2nd Try</th>
                <th>3rd Try</th>
                <th>4th Try</th>
            </tr>
        </thead>
        <tbody>
            <% wordBank.forEach((word)=> { %>
                <tr>
                    <td class="word-cell">
                        <%= word %>
                    </td>
                    <td>
                        <div class="blank-line"></div>
                    </td>
                    <td>
                        <div class="blank-line"></div>
                    </td>
                    <td>
                        <div class="blank-line"></div>
                    </td>
                    <td>
                        <div class="blank-line"></div>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>